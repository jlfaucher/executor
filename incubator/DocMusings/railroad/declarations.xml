<syntaxdiagrams>


<!--===============================
RxMath 
================================-->

<syntaxdiagram>
    <title>MathLoadFuncs</title>
    <groupcomp>
        <kwd>MathLoadFuncs</kwd>
        <delim>(</delim>
        <delim>)</delim>
    </groupcomp>
</syntaxdiagram>

<syntaxdiagram>
    <title>RxCalcSqrt</title>
    <groupseq>
        <groupcomp>
            <kwd>RxCalcSqrt</kwd>
            <delim>(</delim>
            <var>number</var>
        </groupcomp>
        <groupseq importance="optional">
            <delim>,</delim>
            <var>precision</var>
        </groupseq>
        <delim>)</delim>
    </groupseq>
</syntaxdiagram>

<!--===============================
rexxref 
================================-->

<syntaxdiagram>
    <title>DO</title>
    <groupseq>
        <kwd>DO</kwd>
        <groupseq importance="optional">
            <kwd>LABEL</kwd>
            <var>name</var>
        </groupseq>
        <!-- can insert the text to display directly in the fragref.
             that way, no need to retrieve the fragment to get its title -->
        <fragref importance="optional">repetitor</fragref>
        <!-- <fragref href="#DO_repetitor" importance="optional"/> -->
        <fragref href="#DO_conditional" importance="optional"/>
        <sep>;</sep>
        <groupseq>
            <repsep/>
            <var>instruction</var>
            <sep>;</sep>
        </groupseq>
        <kwd>END</kwd>
        <var importance="optional">name</var>
    </groupseq>
    <fragment id="DO_repetitor">
        <title>repetitor</title>
        <groupchoice>
            <groupseq>
                <var>control1</var>
                <oper>=</oper>
                <var>expri</var>
                <groupseq importance="optional">
                    <kwd>TO</kwd>
                    <var>exprt</var>
                </groupseq>
                <groupseq importance="optional">
                    <kwd>BY</kwd>
                    <var>exprb</var>
                </groupseq>
                <groupseq importance="optional">
                    <kwd>FOR</kwd>
                    <var>exprf</var>
                </groupseq>
            </groupseq>
            <groupseq>
                <var>control2</var>
                <kwd>OVER</kwd>
                <var>collection</var>
            </groupseq>
            <kwd>FOREVER</kwd>
            <var>exprr</var>
        </groupchoice>
    </fragment>
    <fragment id="DO_conditional">
        <title>conditional</title>
        <groupchoice>
            <groupseq>
                <kwd>WHILE</kwd>
                <var>exprw</var>
            </groupseq>
            <groupseq>
                <kwd>UNTIL</kwd>
                <var>expru</var>
            </groupseq>
        </groupchoice>
    </fragment>
</syntaxdiagram>


