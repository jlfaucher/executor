<syntaxdiagram>
    <title>URL syntax 1</title>
    <groupseq>
        <groupseq>
            <kwd>http</kwd>
            <sep>:</sep>
        </groupseq>
        <groupseq>
            <sep>//</sep>
            <var>host</var>
        </groupseq>
        <groupseq importance="optional">
            <sep>:</sep>
            <var>port</var>
        </groupseq>
        <groupseq>
            <sep>/</sep>
            <var>path</var>
        </groupseq>
    </groupseq>
</syntaxdiagram>

<!-- Same as previous, but use less groups -->
<syntaxdiagram>
    <title>URL syntax 1a</title>
    <groupseq>
        <kwd>http</kwd>
        <sep>:</sep>
        <sep>//</sep>
        <var>host</var>
        <groupseq importance="optional">
            <sep>:</sep>
            <var>port</var>
        </groupseq>
        <groupseq>
            <sep>/</sep>
            <var>path</var>
        </groupseq>
    </groupseq>
</syntaxdiagram>

<syntaxdiagram>
    <title>URL syntax 2</title>
